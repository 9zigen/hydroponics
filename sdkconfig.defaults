# ESP32 general network config.
CONFIG_ETH_ENABLED=n
CONFIG_ETH_USE_ESP32_EMAC=n
CONFIG_ETH_USE_SPI_ETHERNET=n
CONFIG_ESP_NETIF_TCPIP_ADAPTER_COMPATIBLE_LAYER=n
CONFIG_LWIP_DHCP_RESTORE_LAST_IP=y

# Google IoT Core config.
CONFIG_GIOT_PROJECT_ID="iot-hydroponics"
CONFIG_GIOT_LOCATION="us-central1"
CONFIG_GIOT_REGISTRY_ID="registry"

# LCD mode.
CONFIG_BIT_MODE_8BIT=y

# Enable logs dumping via UDP broadcast.
CONFIG_ESP_SYSLOG_ENABLE=y

# FreeRtos options.
CONFIG_FREERTOS_USE_TRACE_FACILITY=y
CONFIG_FREERTOS_VTASKLIST_INCLUDE_COREID=y
CONFIG_FREERTOS_GENERATE_RUN_TIME_STATS=y

# Stack overflows and memory corruptions.
CONFIG_FREERTOS_WATCHPOINT_END_OF_STACK=y
CONFIG_HEAP_POISONING_COMPREHENSIVE=y
CONFIG_HEAP_TASK_TRACKING=y
CONFIG_COMPILER_STACK_CHECK=y
CONFIG_COMPILER_WARN_WRITE_STRINGS=y
CONFIG_COMPILER_STACK_CHECK_MODE_NORM=y

# Use a custom and bigger partition.
CONFIG_PARTITION_TABLE_CUSTOM=y
CONFIG_PARTITION_TABLE_CUSTOM_FILENAME="main/partitions.csv"
CONFIG_PARTITION_TABLE_FILENAME="main/partitions.csv"
